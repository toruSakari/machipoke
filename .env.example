# API URL設定
API_ENDPOINT=http://localhost:8787/api

# クライアント環境設定
CLIENT_URL=http://localhost:5173
NODE_ENV=development

# Cloudflare環境変数
# Wrangler コマンドでローカル開発時に使用
CF_ACCOUNT_ID=your_cloudflare_account_id
CF_API_TOKEN=your_cloudflare_api_token

# Cloudflare R2ストレージ（画像アップロード用）
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=machipoke-images

# 認証関連
# JWT署名用のシークレットキーなど
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Auth0設定（使用する場合）
AUTH0_DOMAIN=your_auth0_domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_CALLBACK_URL=http://localhost:5173/callback

# マップAPI（Mapboxまたは他のサービス）
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# データベース接続設定（ローカル開発用、必要に応じて）
DB_CONNECTION_STRING=your_db_connection_string

# ログレベル設定
LOG_LEVEL=debug

# メール送信設定（必要に応じて）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
EMAIL_FROM=no-reply@machipoke.example.com

# クリエナブルのAPIキー（必要に応じて、翻訳・多言語対応など）
CREANABLE_API_KEY=your_creanable_api_key
