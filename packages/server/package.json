{
  "name": "@machipoke/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/tests/unit",
    "test:integration": "vitest run src/tests/integration",
    "test:e2e": "vitest run src/tests/e2e",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node -r esbuild-register ./scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node -r esbuild-register ./scripts/seed.ts",
    "db:status": "node -r esbuild-register ./scripts/migrate-status.ts"
  },
  "dependencies": {
    "@machipoke/shared": "0.1.0",
    "@pothos/core": "^3.41.0",
    "@pothos/plugin-validation": "^3.10.1",
    "drizzle-orm": "^0.29.3",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.1.1",
    "hono": "^3.12.8",
    "jwt-decode": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240320.1",
    "@types/node": "^20.11.5",
    "drizzle-kit": "^0.20.13",
    "esbuild": "^0.19.12",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "wrangler": "^3.22.4"
  }
}